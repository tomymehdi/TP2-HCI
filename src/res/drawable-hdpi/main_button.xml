<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#CCFFFF" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"/>
            <corners
                android:radius="66dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#CCFFFF"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#2f6699"/>
            <corners
                android:radius="70dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>