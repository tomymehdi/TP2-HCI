<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/lupa"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_search" />

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="45px"
        android:layout_height="45px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5px"
        android:layout_toLeftOf="@+id/lupa"
        android:src="@drawable/setting_icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="104dp"
        android:text="Currency"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60px" />

    <Spinner
        android:id="@+id/currency_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="38dp"
	    android:entries="@array/monedas"/>
        
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/setting_icon"
        android:layout_marginTop="36dp"
        android:text="Login"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60px" />

    <EditText
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/setting_icon"
        android:layout_toRightOf="@+id/currency_options"
        android:hint="@string/username" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/login_button"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:text="Login" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/login_button"
        android:text="Logout" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_text"
        android:layout_below="@+id/username_text"
        android:layout_toLeftOf="@+id/setting_icon"
        android:hint="@string/password"
        android:inputType="textPassword" />

</RelativeLayout>