<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ar.art"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name=".ArtApplication" >
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/categories"
            android:name=".CategoriesActivity" >
        </activity>
        <activity
            android:label="@string/subcategories"
            android:name=".SubcategoriesActivity" >
        </activity>
        <activity
            android:label="@string/my_account"
            android:name=".MyAccountActivity" >
        </activity>
        <activity
            android:label="@string/products"
            android:name=".ProductsActivity" >
        </activity>
        <activity
            android:label="@string/info"
            android:name=".ItemDescriptionActivity" >
        </activity>
        
        <activity 
            android:name=".SearchActivity" >
            <intent-filter>
            <action android:name="android.intent.action.SEARCH" />
        </intent-filter>
        <meta-data 
            android:name="android.app.searchable"
            android:resource="@xml/searchable"/>
    		</activity>
    		 
   		<activity android:name=".OpenSearchActivity"  >
        <meta-data android:name="android.app.default_searchable"
                   android:value=".SearchActivity" />
    		</activity>
    </application>

</manifest>